{
  "name": "iyoux/text-filters",
  "type": "library",
  "description": "Filters for text",
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "Iyoux\\TextFilters\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "spatie/ray": "^1.41",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.11",
    "phpstan/phpstan-strict-rules": "^2.0"
  },
  "scripts": {
    "test": "phpunit --configuration=phpunit.xml",
    "analyse": "phpstan analyse --configuration=phpstan.neon",
    "lint": "phpcs --standard=PSR12 src tests"
  }
}
